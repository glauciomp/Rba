<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Rba.Pages.HomePage"
             Title="Recicla Belém">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label x:Name="lblBoasVindas"
                   FontSize="22"
                   FontAttributes="Bold"
                   TextColor="{StaticResource Primary}"
                   HorizontalOptions="Center" />

            <Label x:Name="lblTipoUsuario"
                   FontSize="18"
                   TextColor="{StaticResource Gray500}"
                   HorizontalOptions="Center" />

            <Label Text="Bem-vindo ao Recicla Belém!"
                   FontSize="24"
                   HorizontalOptions="Center"
                   TextColor="{StaticResource Primary}" />

            <Label Text="Escolha uma opção abaixo:"
                   FontSize="18"
                   HorizontalOptions="Center" />

            <Button Text="Tipos de Lixo"
                    Clicked="OnTiposLixoClicked"
                    Background="{StaticResource PrimaryBrush}"
                    TextColor="{StaticResource White}" />

            <Button Text="Mapa de Pontos de Coleta"
                    Clicked="OnMapaClicked"
                    Background="{StaticResource PrimaryBrush}"
                    TextColor="{StaticResource White}" />

            <Button Text="Desafios Semanais"
                    Clicked="OnDesafiosClicked"
                    Background="{StaticResource PrimaryBrush}"
                    TextColor="{StaticResource White}" />

            <Button Text="Sair"
                    Clicked="OnLogoutClicked"
                    Background="{StaticResource PrimaryBrush}"
                    TextColor="{StaticResource White}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
