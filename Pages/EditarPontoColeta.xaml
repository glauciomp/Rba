<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Rba.Pages.EditarPontoColeta"
             Title="EditarPontoColeta">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="15">

            <Label Text="Editar Ponto de Coleta"
                   FontSize="22"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   Margin="0,10"/>

            <Entry x:Name="nomeEntry" Placeholder="Nome do Ponto"/>
            <Entry x:Name="enderecoEntry" Placeholder="Endereço"/>
            <Entry x:Name="tipoEntry" Placeholder="Tipo de Lixo"/>
            <Entry x:Name="contatoEntry" Placeholder="Contato"/>

            <HorizontalStackLayout Spacing="10">
                <VerticalStackLayout>
                    <Label Text="Início" FontAttributes="Bold"/>
                    <TimePicker x:Name="inicioPicker"/>
                </VerticalStackLayout>

                <VerticalStackLayout>
                    <Label Text="Fim" FontAttributes="Bold"/>
                    <TimePicker x:Name="fimPicker"/>
                </VerticalStackLayout>
            </HorizontalStackLayout>

            <Button Text="Salvar Alterações"
                    BackgroundColor="#4CAF50"
                    TextColor="White"
                    CornerRadius="8"
                    Clicked="OnSalvarClicked"/>

            <Button Text="Cancelar"
                    BackgroundColor="#9E9E9E"
                    TextColor="White"
                    CornerRadius="8"
                    Clicked="OnCancelarClicked"/>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>