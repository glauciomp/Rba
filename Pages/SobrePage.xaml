<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:Rba.Views"
             x:Class="Rba.Pages.SobrePage"
             Title="Sobre">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="15">

            <views:LogoView />                        

            <Label Text="Aplicativo voltado para auxiliar na conscientização e organização da coleta seletiva em Belém."
                   FontSize="18"
                   TextColor="{StaticResource Gray500}"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center" />

            <Label Text="Desenvolvedores:"
                   FontSize="20"
                   FontAttributes="Bold"
                   TextColor="{StaticResource Primary}" />

            <Label Text=" • Alfredo Paulo Coppini&#10;
• Ana Beatriz Pereira da Silva&#10;
• Bianca Karine dos Santos Antunes&#10;
• Emanuel Machado dos Passos Silva&#10;
• Gláucio Magalhães Pereira&#10;
• Thiago Alex dos Santos Martins"
                   FontSize="16"
                   TextColor="{StaticResource Gray500}" />

            <Label Text="Versão: 2.04.001&#10;Mudanças:&#10; • Adicionado botão Sobre;&#10;
• Correções textuais gerais;&#10; • Melhorias dinâmicas nos botões consultar e limpar."
                   FontSize="16"                   
                   TextColor="{StaticResource Gray500}" />

            <Label Text="Ano de Desenvolvimento: 2025"
                   FontSize="16"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="{StaticResource Gray500}" />

            <Button Text="Voltar"
                    Clicked="OnVoltarClicked"
                    Background="{StaticResource PrimaryBrush}"
                    TextColor="{StaticResource White}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
