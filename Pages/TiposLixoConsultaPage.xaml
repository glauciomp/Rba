<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"             
             x:Class="Rba.Pages.TiposLixoConsultaPage"
             Title="Tipos de Lixo Cadastrados">

    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="15">
            
            <Label TextColor="{StaticResource Primary}"
                   HorizontalOptions="Center"
                   HorizontalTextAlignment="Center">
                
                <Label.FormattedText>
                    <FormattedString>
                        <Span Text="Dica sustentável: "
                              TextColor="{StaticResource Primary}"
                              FontAttributes="Bold" />
                        <Span Text="Sempre lave embalagens antes de descartá-las. Isso evita contaminação e facilita a reciclagem!"
                              TextColor="{StaticResource Primary}"/>
                    </FormattedString>
                </Label.FormattedText>
                
            </Label>

                <HorizontalStackLayout HorizontalOptions="End" 
                                   Spacing="10">
                <Button Text="Voltar" 
                        Clicked="OnVoltarClicked"
                        Background="{StaticResource PrimaryBrush}"
                        TextColor="{StaticResource White}" />

                <Button Text="Consultar"
                        Clicked="OnConsultarClicked"
                        Background="{StaticResource PrimaryBrush}"
                        TextColor="{StaticResource White}" />

                <Button Text="Registrar"
                        Clicked="OnRegistrarClicked"
                        Background="{StaticResource PrimaryBrush}"
                        TextColor="{StaticResource White}"
                        IsVisible="{Binding IsMaster}" />

            </HorizontalStackLayout>
            
            <!-- Campo de Busca -->
            <Entry x:Name="BuscarEntry"
                   Placeholder="Clique em consultar para consultar todos e depois o termo que deseja buscar..."
                   TextChanged="OnConsultarTextChanged"
                   BackgroundColor="White"
                   Margin="0,10,0,0"
                   FontSize="12"
                   TextColor="Black"/>

            <Label Text="Tipos de Lixo Cadastrados"
                   TextColor="{StaticResource Primary}"
                   FontAttributes="Bold"
                   FontSize="Medium"
                   HorizontalOptions="Center" />

            <CollectionView x:Name="TiposLixoListView">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <Border BackgroundColor="Green"
                    Stroke="LightGray"
                    StrokeThickness="1"
                    Padding="10"
                    Margin="5"
                    HorizontalOptions="FillAndExpand">

                            <!-- Grid define largura: col 0 fixa (imagem), col 1 elástica (texto) -->
                            <Grid ColumnDefinitions="60,*"
                      ColumnSpacing="10">

                                <!-- imagem -->
                                <Image Grid.Column="0"
                           Source="{Binding Imagem}"
                           WidthRequest="60"
                           HeightRequest="60"
                           Aspect="AspectFill"
                           VerticalOptions="Start" />

                                <!-- textos -->
                                <VerticalStackLayout Grid.Column="1"
                                         Spacing="2"
                                         HorizontalOptions="FillAndExpand">

                                    <Label Text="{Binding ID}"
                               FontAttributes="Bold"
                               TextColor="White" />

                                    <Label Text="{Binding Cor}"
                               TextColor="White"
                               LineBreakMode="WordWrap"
                               HorizontalOptions="FillAndExpand" />

                                    <Label Text="{Binding Material}"
                               TextColor="White"
                               LineBreakMode="WordWrap"
                               HorizontalOptions="FillAndExpand" />

                                    <Label Text="{Binding Origem}"
                               TextColor="White"
                               LineBreakMode="WordWrap"
                               HorizontalOptions="FillAndExpand" />

                                    <Label Text="{Binding OrigemDescricao}"
                               TextColor="White"
                               LineBreakMode="WordWrap"
                               HorizontalOptions="FillAndExpand" />

                                    <Label Text="{Binding DestinoAmbiental}"
                               TextColor="White"
                               LineBreakMode="WordWrap"
                               HorizontalOptions="FillAndExpand" />

                                    <Label Text="{Binding Exemplos}"
                               TextColor="White"
                               LineBreakMode="WordWrap"
                               HorizontalOptions="FillAndExpand" />

                                    
                                </VerticalStackLayout>
                                
                            </Grid>
                        </Border>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>


        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
